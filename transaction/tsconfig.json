    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "compileOnSave": true,
  "include": ["src"]
}